<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= climateaction.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/climateactions/<%= climateaction._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Your Comment on <%= climateaction.name %>"></textarea>
                </div>
                
                    
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/climateactions">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>